@model Candidate;


<div class="display-6 text-center">Apply</div>

<!-- Ici il n'est pas forcement necessaire d'indiquer asp-controller, puis que par dÃ©faut c'est course -->
<!--Ici nous sommes dans une vue de course en coorespondance d'un controller course(nous parlons de la balise form) -->

<form asp-action="Apply" method="post">
    <!--Cette balise div qui contient asp-validation-summary permet de lister -->
    <!--toutes les erreurs ou les champs qui ne sont pas remplis -->
    <!--Au niveau de sa valeur, soit on indique all pour dire que c'est tous les champs -->
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="form-group my-2">
        <label asp-for="Email">Email</label>
        <input type="email"class="form-control"  asp-for="Email">
    </div>
    <div class="form-group my-2">
        <label asp-for="FirstName">Firstname</label>
        <input type="text"class="form-control" asp-for="FirstName">
    </div>
    <div class="form-group my-2">
        <label asp-for="LastName">Lastname</label>
        <input type="text"class="form-control" asp-for="LastName">
    </div>
    <div class="form-group my-2">
        <label asp-for="Age">Age</label>
        <select class="form-control"asp-for="Age">
            <option value="18" selected>18</option>
            <option value="19">19</option>
            <option value="20">20</option>
            <option value="21">21</option>
            <option value="22">22</option>
            <option value="23">23</option>
        </select>
    </div>
    <fieldset>
        <legend>Select one course</legend>
        <div class=" my-2">
            <input type="radio" value="ASP.NET Core MVC" asp-for="SelectedCourse">
            <label asp-for="SelectedCourse">ASP.NET Core MVC</label>
        </div>
        <div class="my-2">
            <input type="radio" value="ASP.NET API" asp-for="SelectedCourse" checked>
            <label asp-for="SelectedCourse">ASP.NET Core API</label>
        </div>
        <div class=" my-2">
            <input type="radio" value="Blazor" asp-for="SelectedCourse">
            <label asp-for="SelectedCourse">Blazor</label>
        </div>
        <div class=" my-2">
            <input type="radio" value="Bootstrap" asp-for="SelectedCourse">
            <label asp-for="SelectedCourse">Bootstrap</label>
        </div>
    </fieldset>
    <div>
        <input type="submit" value="Apply" class="btn btn-primary">
        <a class="btn btn-warning" asp-controller="Home" asp-action="Index">Home</a>
    </div>
</form>
